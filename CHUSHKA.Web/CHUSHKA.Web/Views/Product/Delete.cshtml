@model ProductDetailsViewModel

<h1 class="text-center text-mishmash">Create Product</h1>
<hr class="w-50 hr-2 bg-dark" />

<form asp-action="DeleteProduct" asp-route-id="@Model.ProductId" class="mx-auto w-50" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" class="form-control" disabled="disabled" value="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">Price</label>
        <input asp-for="@Model.Price" class="form-control" disabled="disabled" value="@Model.Price">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">Description</label>
        <textarea asp-for="@Model.Description" disabled="disabled" class="form-control">@Model.Description</textarea>
    </div>
    <h3 class="text-center">Product Type</h3>
    <hr class="w-50 hr-2 bg-dark" />
    <div class="form-group d-flex justify-content-around">
        <label asp-for="@Model.Type" class="radio-inline">
            <input asp-for="@Model.Type" type="radio" name="Type" value="Food" disabled="disabled">Food
        </label>
        <label asp-for="@Model.Type" class="radio-inline">
            <input asp-for="@Model.Type" type="radio" name="Type" value="Domestic" disabled="disabled">Domestic
        </label>
        <label asp-for="@Model.Type" class="radio-inline">
            <input asp-for="@Model.Type" type="radio" name="Type" value="Health" disabled="disabled">Health
        </label>
        <label asp-for="@Model.Type" class="radio-inline">
            <input asp-for="@Model.Type" type="radio" name="Type" value="Cosmetic" disabled="disabled">Cosmetic
        </label>
        <label asp-for="@Model.Type" class="radio-inline">
            <input asp-for="@Model.Type" type="radio" name="Type" value="Other" disabled="disabled">Other
        </label>
    </div>
    <hr class="w-50 hr-2 bg-dark" />

    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color text-white">Delete</button>
    </div>
</form>