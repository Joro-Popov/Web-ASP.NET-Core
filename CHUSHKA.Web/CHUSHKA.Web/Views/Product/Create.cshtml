@model CreateProductViewModel

<h1 class="text-center text-mishmash">Create Product</h1>
<hr class="w-50 hr-2 bg-dark" />

<form class="mx-auto w-50" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" class="form-control" placeholder="Name...">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">Price</label>
        <input asp-for="@Model.Price" class="form-control" placeholder="Price...">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">Description</label>
        <textarea asp-for="@Model.Description" class="form-control" placeholder="Description..."></textarea>
    </div>
    <h3 class="text-center">Product Type</h3>
    <hr class="w-50 hr-2 bg-dark" />
    <div class="form-group d-flex justify-content-around">
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Food" checked>Food
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Domestic">Domestic
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Health">Health
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Cosmetic">Cosmetic
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Other">Other
        </label>
    </div>
    <hr class="w-50 hr-2 bg-dark" />

    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color text-white">Create</button>
    </div>
</form>