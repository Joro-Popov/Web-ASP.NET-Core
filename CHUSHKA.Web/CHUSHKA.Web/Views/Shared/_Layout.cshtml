<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CHUSHKA</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/reset-css.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/style.css" />
    </environment>
</head>
<body>
<div class="container-fluid">
    <header>
        @if (!this.User.Identity.IsAuthenticated)
        {
            <partial name="GuestMenuNavigation"/> 
        }
        else if (this.User.IsInRole("Admin"))
        {
            <partial name="AdminMenuNavigation"/>
        }
        else if (this.User.IsInRole("User")) 
        {
            <partial name="UserMenuNavigation"/>
        }
    </header>
    <main class="mt-3">
        @RenderBody()
    </main>
    <footer>
        <div class="container-fluid chushka-bg-color">
            <div class="text-white p-2 text-center">&copy; CopyRight Sanity Web Design Studios 2018. All rights reserved.
            </div>
        </div>
    </footer>
</div>
</body>
</html>
