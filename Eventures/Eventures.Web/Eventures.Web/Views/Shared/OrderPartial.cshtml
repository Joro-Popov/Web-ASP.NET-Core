 @model OrderViewModel

<form asp-controller="Events" asp-action="Order" method="post" class="form-inline">
    <div class="form-group mx-sm-2 mb-2">
        <label asp-for="@Model.TicketsCount" class="font-weight-bold mx-sm-2"></label>
        <input asp-for="@Model.TicketsCount" class="form-control" />
        <input asp-for="@Model.EventId" class="form-control" hidden="" />
     </div>
     <button type="submit" class="btn eventures-bg-color mb-2">Order</button>
 </form>