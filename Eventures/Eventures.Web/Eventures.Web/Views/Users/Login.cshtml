@model LoginViewModel

<h1 class="text-center">Login</h1>
<hr class="hr-2 eventures-bg-color half-width" />

<form class="mx-auto half-width" method="post">
    <div class="form-group text-center">
        <label asp-for="@Model.Username" class="font-weight-bold">Username</label>
        <input asp-for="@Model.Username" class="form-control" placeholder="Username...">
        <span asp-validation-for="@Model.Username" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="@Model.Password" class="font-weight-bold">Password</label>
        <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Password...">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>

    <hr class="hr-2 eventures-bg-color"/>
    <div class="form-group text-center">
        <input asp-for="RememberMe" type="checkbox"/> Remember me?
    </div>
    <hr class="hr-2 eventures-bg-color"/>

    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Login</button>
    </div>

    <div class="form-group text-center active mt-3">
        <a href="" class="btn-link">Forgot yout password?</a>
    </div>
    <div class="form-group text-center active">
        <a asp-controller="Users" asp-action="Register" class="btn-link">Register as a new user</a>
    </div>
</form>
