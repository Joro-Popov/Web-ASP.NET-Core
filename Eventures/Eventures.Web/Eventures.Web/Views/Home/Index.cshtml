@if (!this.User.Identity.IsAuthenticated)
{
    <div class="jumbotron mt-3 eventures-bg-color">
        <h1>Eventures - The best ticket service in the world.</h1>
        <hr class="bg-dark hr-2" />
        <h3><a asp-controller="Users" asp-action="Login" class="nav-link-blue">Login</a> to start eventing.</h3>
        <h3><a asp-controller="Users" asp-action="Register" class="nav-link-blue">Register</a> if you don't have an account.</h3>
    </div>
}