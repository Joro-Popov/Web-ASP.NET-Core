@model CreatePackageViewModel

<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-6">
            <h1 class="text-panda font-weight-normal" align="center">Create Package</h1>
            <hr style="height: 2px" class="bg-panda" />

            <form asp-controller="Packages" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="@Model.Description">Description</label>
                    <input asp-for="@Model.Description" class="form-control" placeholder="Description...">
                </div>
                <div class="row">
                    <div class="col form-group">
                        <label asp-for="@Model.Weight">Weight</label>
                        <input asp-for="@Model.Weight" class="form-control" placeholder="Weight...">
                    </div>
                    <div class="col">
                    </div>
                    <div class="col form-group">
                        <label asp-for="@Model.ShippingAddress">Shipping Address</label>
                        <input asp-for="@Model.ShippingAddress" class="form-control" placeholder="Shipping Address...">
                    </div>
                </div>

                <hr style="height: 2px" class="bg-panda" />
                <div class="text-center">
                    Recipient
                    <div>
                        <select name="Recipient">
                            <option selected="true" disabled="disabled">-- Choose Recipient --</option>
                            @foreach (var user in ViewBag.Users)
                            {
                                <option value="@user">@user</option>
                            }
                        </select>
                    </div>
                </div>
                <hr style="height: 2px" class="bg-panda" />
                <div class="text-center">
                    <button type="submit" class="btn bg-panda text-white">Create</button>
                </div>
            </form>
        </div>
        <div class="col">
        </div>
    </div>
</div>